import java.util.Scanner;

public class Ejercicio3 {
	public static void main(String[] args) {
		int porcentaje;
		float valor;
	Ejercicio3 ejer3 = new Ejercicio3();
		
	}
	public String Descuento(float valor) {
		float porciento;
		int porcentaje;
		System.out.println("Dime el valor de tu compra");
		Scanner sc= new Scanner(System.in);
		valor=sc.nextFloat();
		if(valor>=150.10) {
			porcentaje=10;
			float descuento=valor*porcentaje/100;
			System.out.println("el porcentaje es: "+porcentaje+"y se descuenta"+descuento);
		}
		else if(valor>200.05) {
		
			porcentaje=15;
			System.out.println("el porcentaje es: "+porcentaje+"y se descuenta"+descuento);
		}
		return null;
		
		
	}

}
